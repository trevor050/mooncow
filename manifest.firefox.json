{
  "manifest_version": 3,
  "name": "Mooncow Search",
  "version": "0.1.0",
  "description": "Press CTRL+E to open a search window on the current page.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "scripting",
    "history",
    "cookies",
    "bookmarks",
    "clipboardWrite",
    "clipboardRead",
    "downloads",
    "activeTab"
  ],
  "omnibox": { "keyword": "mc" },
  "host_permissions": [
    "https://suggestqueries.google.com/*",
    "https://api.cerebras.ai/*",
    "https://www.google.com/*",
    "https://customsearch.googleapis.com/*",
    "https://www.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://en.wikipedia.org/*",
    "https://api.duckduckgo.com/*",
    "https://hn.algolia.com/*",
    "https://api.stackexchange.com/*",
    "https://r.jina.ai/*",
    "https://s.jina.ai/*",
    "https://news.google.com/*",
    "https://www.bing.com/*",
    "https://api.gdeltproject.org/*",
    "https://www.war.gov/*",
    "https://www.defense.gov/*",
    "https://apnews.com/*",
    "https://www.theguardian.com/*",
    "https://www.reuters.com/*",
    "https://rss.cnn.com/*",
    "https://feeds.bbci.co.uk/*",
    "https://feeds.foxnews.com/*",
    "https://www.aljazeera.com/*",
    "https://rss.politico.com/*",
    "https://www.politico.com/*",
    "https://thehill.com/*",
    "https://www.defenseone.com/*",
    "https://breakingdefense.com/*",
    "https://www.militarytimes.com/*",
    "https://archive.org/*",
    "https://web.archive.org/*",
    "https://www.state.gov/*",
    "https://www.whitehouse.gov/*",
    "https://home.treasury.gov/*",
    "https://www.justice.gov/*",
    "https://www.dhs.gov/*",
    "https://www.gao.gov/*",
    "https://crsreports.congress.gov/*",
    "https://www.everycrsreport.com/*",
    "https://www.congress.gov/*",
    "https://www.sec.gov/*",
    "https://spaceforce.mil/*",
    "https://www.army.mil/*",
    "https://www.navy.mil/*",
    "https://www.af.mil/*",
    "https://www.marines.mil/*",
    "https://export.arxiv.org/*",
    "https://eutils.ncbi.nlm.nih.gov/*",
    "https://api.crossref.org/*",
    "https://api.openalex.org/*",
    "https://www.biorxiv.org/*",
    "https://www.reddit.com/*",
    "https://nominatim.openstreetmap.org/*",
    "https://www.courtlistener.com/*",
    "https://www.federalregister.gov/*",
    "https://www.scotusblog.com/*"
  ],
  "background": {
    "scripts": [
      "tools/search.js",
      "tools/jina.js",
      "tool-registry.js",
      "background.js",
      "chat.js",
      "google-chat.js"
    ]
  },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"] }
  ],
  "web_accessible_resources": [
    {
      "resources": ["search.html", "style.css", "search.js", "ranking.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": { "gecko": { "id": "mooncow-search@mooncow.dev" } }
}


