{
  "manifest_version": 3,
  "name": "Mooncow Search",
  "version": "0.1.0",
  "description": "Press CTRL+E to open a search window on the current page.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "scripting",
    "history",
    "cookies",
    "bookmarks",
    "clipboardWrite",
    "clipboardRead",
    "downloads",
    "activeTab"
  ],
  "omnibox": {
    "keyword": "mc"
  },
  "host_permissions": [
    "https://suggestqueries.google.com/*",
    "https://api.cerebras.ai/*",
    "https://www.google.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://en.wikipedia.org/*",
    "https://api.duckduckgo.com/*",
    "https://hn.algolia.com/*",
    "https://api.stackexchange.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "search.html",
        "style.css",
        "search.js",
        "ranking.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "mooncow-search@mooncow.dev"
    }
  }
} 
